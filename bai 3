danh sách tên khách hàng duy nhất 
SELECT DISTINCT full_name
FROM customer
ORDER BY full_name;

 Khách hàng chưa có email (IS NULL)
SELECT customer_id, full_name
FROM customer
WHERE email IS NULL;

 3 khách hàng điểm thưởng cao nhất, bỏ qua khách hàng cao điểm nhất
SELECT customer_id, full_name, reward_point
FROM customer
ORDER BY reward_point DESC, customer_id ASC
LIMIT 3 OFFSET 1;

 Sắp xếp khách hàng theo tên giảm dần
SELECT customer_id, full_name, email, reward_point
FROM customer
ORDER BY full_name DESC;